<?xml version="1.0" encoding="utf-8"?>
<!--android:paddingTop="5dp"-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardItemSong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_view_background_player"
            android:layout_marginStart="3dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                app:srcCompat="@android:drawable/presence_audio_busy"/>

            <LinearLayout
                android:layout_width="243dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblSongName"
                    android:layout_width="250dp"
                    android:layout_height="21dp"
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:paddingTop="0dp"
                    android:shadowColor="@color/colorAccent"
                    android:text="Song Name"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblArtist"
                    android:layout_width="250dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:paddingTop="0dp"
                    android:text="Artist"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblAlbum"
                    android:layout_width="250dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:paddingTop="0dp"
                    android:text="Album"
                    android:visibility="invisible"
                    android:textStyle="italic" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblYear"
                android:layout_width="77dp"
                android:layout_height="31dp"
                android:layout_marginStart="2dp"
                android:text="2001"
                android:textAlignment="viewStart"
                android:textSize="13sp"
                android:visibility="visible" />

        </TableRow>

    </android.support.v7.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:layout_margin="0dp"-->

    <android.support.v7.widget.CardView
        android:id="@+id/cardItemSong"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/card_view_background_player"
        android:layout_margin="1dp">
        <!--android:layout_marginEnd="4dp"-->


        <TableRow
            android:id="@+id/tableRowSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:layout_marginStart="0dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp" />
                <!--app:srcCompat="@android:drawable/presence_audio_busy"/>-->
                <!--android:background="@drawable/meir1"-->

            <LinearLayout
                android:layout_width="243dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp">

                <TextView
                    android:id="@+id/lblSongName"
                    android:layout_width="240dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:text="Song Name"
                    android:textAlignment="textStart"
                    android:textColor="@color/titles_card_foreground_main_song"
                    android:textSize="15sp" />
                    <!--android:textStyle="bold"-->
                    <!--android:shadowColor="@color/colorAccent"-->

                <TextView
                    android:id="@+id/lblArtist"
                    android:layout_width="240dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:text="Artist"
                    android:textAlignment="textStart"
                    android:textColor="@color/titles_card_foreground_second_song"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblLength"
                android:layout_width="49dp"
                android:layout_height="25dp"
                android:layout_marginLeft="35dp"
                android:text="03:45"
                android:textAlignment="textStart"
                android:textColor="@color/titles_card_foreground_third_song"
                android:textSize="13sp"
                android:visibility="visible" />

        </TableRow>

    </android.support.v7.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardItemSong"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:layout_marginEnd="4dp">


        <TableRow
            android:id="@+id/tableRowSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginStart="3dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp" />
            <!--app:srcCompat="@android:drawable/presence_audio_busy"/>-->

            <LinearLayout
                android:layout_width="243dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingStart="14dp"
                android:paddingTop="0dp">

                <TextView
                    android:id="@+id/lblSongName"
                    android:layout_width="250dp"
                    android:layout_height="21dp"
                    android:layout_weight="1"
                    android:shadowColor="@color/colorAccent"
                    android:text="Song Name"
                    android:textColor="@color/titles_main_foreground"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblArtist"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="Artist"
                    android:textColor="@color/titles_second_foreground"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblAlbum"
                    android:layout_width="250dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:text="Album"
                    android:textColor="@color/titles_third_foreground"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblYear"
                android:layout_width="77dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:text="2001"
                android:textAlignment="viewStart"
                android:textColor="@color/titles_third_foreground"
                android:textSize="13sp"
                android:visibility="visible" />

        </TableRow>

    </android.support.v7.widget.CardView>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardItemMail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp">
        <!--android:layout_marginTop="205dp">-->

        <TableRow
            android:id="@+id/tableRowMail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_view_background_mail"
            android:layout_marginStart="3dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:background="@drawable/meir1"
                app:srcCompat="@drawable/oval" />


            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:paddingStart="14dp"
                android:paddingTop="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblSender"
                    android:layout_width="200dp"
                    android:layout_height="15dp"
                    android:layout_weight="2"
                    android:text="Sender"
                    android:textSize="16sp"
                    android:textColor="@color/titles_card_foreground_main_mail"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSubject"
                    android:layout_width="200dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:text="Subject"
                    android:textColor="@color/titles_card_foreground_second_mail"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblContent"
                    android:layout_width="200dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:text="Content"
                    android:textSize="14sp"
                    android:textColor="@color/titles_card_foreground_third_mail"
                    android:textStyle="italic" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblDateSent"
                android:layout_width="118dp"
                android:layout_height="31dp"
                android:layout_marginStart="2dp"
                android:text="Sent date"
                android:textAlignment="viewStart"
                android:textSize="13sp"
                android:textColor="@color/titles_card_foreground_second_mail"
                android:visibility="visible" />

        </TableRow>

    </android.support.v7.widget.CardView>

</LinearLayout>